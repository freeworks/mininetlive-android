<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_bg"
    android:orientation="vertical"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amountLayout"
        android:layout_alignRight="@+id/amountLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="打赏红包"
        android:textColor="#030303" />

    <RelativeLayout
        android:id="@+id/amountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonLayout"
        android:layout_alignRight="@+id/buttonLayout"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/amountLayout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/amount0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:background="@drawable/reward_amount_uncheck"
                android:paddingBottom="6dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="6dp"
                android:layout_weight="1"
                android:text="￥1.88" />

            <TextView
                android:id="@+id/amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/amount0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/reward_amount_uncheck"
                android:paddingBottom="6dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="6dp"
                android:text="￥8.88" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountLayout0"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/reward_amount_uncheck"
                android:paddingBottom="6dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="6dp"
                android:text="￥68.88" />

            <TextView
                android:id="@+id/amount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/reward_amount_uncheck"
                android:paddingBottom="6dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="6dp"
                android:text="￥88.88" />
        </LinearLayout>
    </RelativeLayout>

    <com.kouchen.mininetlive.ui.widget.ItemViewDivider
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/buttonLayout"
        android:layout_alignRight="@+id/buttonLayout"
        android:layout_below="@+id/amountLayout"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_pay_alipay"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="支付宝"
            android:textColor="#4A90E2" />

        <com.kouchen.mininetlive.ui.widget.ItemViewDivider
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_pay_wechat"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="微信"
            android:textColor="#4A90E2" />
    </LinearLayout>
</RelativeLayout>