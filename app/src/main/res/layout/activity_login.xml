<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_logo_login" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="输入手机号"
        android:textColorHint="#C1C1C1"
        android:padding="8dp"
        android:text="18689490100"
        android:textSize="14dp" />

    <com.kouchen.mininetlive.ui.widget.ItemViewDivider
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/username" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d1"
        android:layout_toLeftOf="@+id/forgetpwd"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="输入密码"
        android:textColorHint="#C1C1C1"
        android:inputType="textPassword"
        android:padding="8dp"
        android:text="123"
        android:textSize="14dp" />

    <TextView
        android:text="忘记密码"
        android:textColor="#C1C1C1"
        android:layout_alignBottom="@+id/password"
        android:layout_alignTop="@+id/password"
        android:id="@+id/forgetpwd"
        android:padding="8dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.kouchen.mininetlive.ui.widget.ItemViewDivider
        android:id="@+id/d2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/password" />

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_btn_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="登录"
        android:textColor="#ffffffff"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_above="@+id/oauthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:background="#E7E7E7"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/labelText"
            android:background="#ffffff"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="使用第三方账号登录" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/oauthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reigsterBtn"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        android:weightSum="3">

        <ImageView
            android:id="@+id/tvQQ"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/ic_qq" />

        <ImageView
            android:id="@+id/tvWechat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/ic_wechat" />

        <ImageView
            android:id="@+id/tvWeibo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/ic_weibo" />
    </LinearLayout>


    <TextView
        android:id="@+id/reigsterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/grey_rect"
        android:gravity="center"
        android:onClick="onClick"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="立即注册"
        android:textColor="#4A4A4A"
        android:textSize="14dp" />


    <RelativeLayout
        android:id="@+id/progress"
        android:visibility="invisible"
        android:background="@drawable/grey_round_bg2"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="200dp"
        android:layout_width="130dp"
        android:layout_height="50dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/mProgress_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:indeterminateDuration="1200" />

        <TextView
            android:textColor="#F8F8F8"
            android:text="正在登陆..."
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>