<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_selector"
    android:padding="10dp">

    <com.kouchen.mininetlive.ui.widget.FrontCoverImageView
        android:id="@+id/frontCover"
        app:riv_corner_radius="4dip"
        app:riv_border_width="0dp"
        app:riv_border_color="#333333"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frontCover"
        android:layout_marginTop="6dp"
        android:text="如何在短期内提高自己的运营效率。"
        android:textColor="#4A4A4A"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/playCount"
        android:layout_below="@+id/title"
        android:layout_marginTop="8dp"
        android:text="1.2万"
        android:textColor="#B0B0B0"
        android:gravity="center"
        android:textSize="11sp"
        android:drawableLeft="@drawable/ic_play_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>