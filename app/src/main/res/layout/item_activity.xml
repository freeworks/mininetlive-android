<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:padding="10dp">

        <com.kouchen.mininetlive.ui.widget.FrontCoverImageView
            android:id="@+id/frontCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            app:riv_corner_radius="4dip"
            android:scaleType="centerCrop"
            app:riv_mutate_background="true"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/frontCover"
            android:layout_marginRight="20dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:text="直播中"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frontCover"
            android:layout_marginTop="6dp"
            android:text="如何在短期内提高自己的运营效率。"
            android:textColor="#4A4A4A"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="3dp"
            android:text="微商公开课。"
            android:textColor="#A0A0A0"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/onlineCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/nickname"
            android:text="1000人在看。"
            android:textColor="#A0A0A0"
            android:textSize="13dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/appointmentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/nickname"
            android:text="预约：12000人。"
            android:textColor="#A0A0A0"
            android:textSize="13dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/content"
        android:background="@color/divide_gray_color" />
</RelativeLayout>