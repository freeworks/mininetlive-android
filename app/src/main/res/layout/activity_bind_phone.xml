<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelPhone"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#FF4A4A4A"
            android:textSize="15sp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="手机号" />

        <EditText
            android:id="@+id/phone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/sendVCode"
            android:layout_toRightOf="@+id/labelPhone"
            android:background="@null"
            android:textSize="15sp"
            android:textColor="#4A4A4A"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="#C1C1C1"
            android:hint="输入手机号" />

        <TextView
            android:id="@+id/sendVCode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="获取验证码"
            android:textSize="14sp"
            android:textColor="#FF7ED321" />
    </RelativeLayout>
    <com.kouchen.mininetlive.ui.widget.ItemViewDivider
        android:id="@+id/d1"
        android:layout_below="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/vcodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d1"
        android:layout_marginTop="5dp"
        android:paddingRight="60dp">

        <TextView
            android:id="@+id/labelVCode"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#FF4A4A4A"
            android:textSize="15sp"
            android:textColorHint="#C1C1C1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="验证码" />

        <EditText
            android:id="@+id/vCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:textSize="15sp"
            android:maxLength="6"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="#FF4A4A4A"
            android:layout_toRightOf="@+id/labelVCode"
            android:textColorHint="#C1C1C1"
            android:hint="输入验证码" />
    </RelativeLayout>

    <com.kouchen.mininetlive.ui.widget.ItemViewDivider
        android:id="@+id/d2"
        android:layout_below="@+id/vcodeLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/d2"
        android:id="@+id/okbtn"
        android:text="确 定"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textSize="16sp"
        android:textColor="#ffffffff"
        android:background="@drawable/blue_btn_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>